{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "files": {
    "includes": [
      "src/**",
      "web/src/**",
      "*.json",
      "*.ts",
      "esbuild.config.js",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/reference",
      "!!**/test-data",
      "!!**/lib"
    ]
  }
}
